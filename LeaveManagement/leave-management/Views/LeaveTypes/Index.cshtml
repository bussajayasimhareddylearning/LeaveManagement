@model IEnumerable<leave_management.Models.DetailLeaveTypeVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Types</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="plus circle icon"></i>Create New</a>
</p>
<table class="ui celled table" id="tblData_LeaveTypes">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefaultDays)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="pencil alternate icon"></i></a>
                   
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="folder open icon"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('are sure you want to delete this record @item.Name')"><i class="trash alternate icon"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

